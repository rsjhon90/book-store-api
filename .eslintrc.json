{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "no-use-before-define": "off",
        "no-console": "off",
        "import/prefer-default-export": "off",
        "import/no-unresolved": "error",
        "import/no-extraneous-dependencies": "off",
        "max-len": ["error",
          {
            "code": 80,
            "ignoreComments": true
          }
        ],
        "@typescript-eslint/no-use-before-define": [
            "error"
        ],
       "import/extensions": [
        "error",
        "ignorePackages",
        {
            "ts": "never"
        }
        ]
    },
    "settings": {
        "import/resolver": {
          "typescript": {},
          "node": {
              "extensions": [
                  ".js",
                  ".ts"
              ]
          }
        }
    }
}
